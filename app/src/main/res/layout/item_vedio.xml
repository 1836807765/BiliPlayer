<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_iv_vedio_pic1"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/bili_default_image_tv"/>

        <TextView
            android:id="@+id/item_tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="传颂之物"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/item_tv_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第13话"
                android:textColor="#aaa"/>

            <TextView
                android:id="@+id/item_tv_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="上周六"
                android:textColor="#aaa"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_iv_vedio_pic2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/bili_default_image_tv"/>

        <TextView
            android:id="@+id/item_tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="传颂之物"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/item_tv_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第13话"
                android:textColor="#aaa"/>

            <TextView
                android:id="@+id/item_tv_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="上周六"
                android:textColor="#aaa"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>